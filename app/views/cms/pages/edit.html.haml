.row
  .col-md-10.col-md-offset-1
    %h3
      = t 'cms.page.edit'
    .row
      .col-md-6.col-md-offset-3#page_edit
        = semantic_form_for(@page, :url => cms_page_path) do |f|
          - f.semantic_errors
          = f.inputs :name => t('cms.page.title') do
            = f.input :name
            = f.input :layout, :member_label => :name, :as => :radio
            = f.input :route
            = f.input :title
            = f.input :keywords, :input_html => { rows: 2 }
            = f.input :description, :input_html => { rows: 3 }
            = f.input :enabled
            = f.input :static
          = f.actions do
            = f.action :submit, :as => :button, :label => t('cms.page.save'), :button_html => { class: 'btn btn-primary' }
