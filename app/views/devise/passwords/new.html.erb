<div class="col-md-6 text-center hidden-xs">
  <div class="margin-top"></div>
  <div class="alert alert-success"><h3><%= Rails.application.config.system_name %></h3></div>
</div>

<div class="col-md-6">

  <h2>Forgot your password?</h2>

  <%= semantic_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :email, :hint => 'Enter your email address' %>
      <%= f.actions do %>
        <%= f.action :submit, :as => :button, :label => 'Send me reset passwords instructions', :button_html => { :class => 'btn btn-primary' } %>
      <% end %>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
