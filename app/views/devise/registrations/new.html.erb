<div class="col-md-6 text-center hidden-xs">
  <div class="margin-top"></div>
  <div class="alert alert-success"><h3><%= Rails.application.config.system_name %></h3></div>
</div>

<div class="col-md-6">
  <h2>Sign up</h2>

  <%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :email, :hint => 'Enter your email address' %>
      <%= f.input :password, :hint => 'Enter password' %>
      <%= f.input :password_confirmation, :hint => 'Confirm your password' %>
      <%= f.actions do %>
        <%= f.action :submit, :as => :button, :label => 'Sign up', :button_html => { :class => 'btn btn-primary' } %>
      <% end %>
    <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
