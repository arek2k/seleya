= render 'devise/shared/header'

.col-md-6.col-md-offset-0.col-sm-8.col-sm-offset-2
  .h2 
    = t 'devise.views.sign_up'

  = semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    = f.semantic_errors
    = f.inputs do
      = f.input :email, :label => (t 'devise.views.e_mail'), :hint => (t 'devise.views.e_mail_hint')
      = f.input :password, :label => (t 'devise.views.password'), :hint => (t 'devise.views.password_hint')
      = f.input :password_confirmation, :label => (t 'devise.views.password_confirmation'),
        :hint => (t 'devise.views.password_confirmation_hint')
      = f.actions do
        = f.action :submit, :as => :button, :label => (t 'devise.views.sign_up'), :button_html => { :class => 'btn btn-primary' }

  = render 'devise/shared/links'
